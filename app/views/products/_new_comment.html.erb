<div class="product-new-reviews">
  <% if signed_in? %>
    <div class="row show-comments">
      <div class="col show-comments-col">
        <h5>Add a review:</h5>
        <%= form_for([@product, @product.comments.build]) do |f| %>
        <p>
          <%= f.label :body, "Comments" %><br>
          <%= f.text_area :body, rows: "5", cols: "24"%>
        </p>
        <div class="rating"></div>
        <p>
          <%= f.submit "Submit" %>
        </p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
